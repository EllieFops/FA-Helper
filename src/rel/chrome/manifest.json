{
  "manifest_version": 2,

  "name": "FA Helper",
  "version": "@@version",
  "build": "@@build",

  "description": "Helpful tools for FurAffinity",

  "author": "Elizabeth Harper (elliefops@gmail.com)",
  "homepage_url": "https://github.com/EllieFops/FA-Helper",

  "offline_enabled": false,

  "page_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "FA Helper"
  },

  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "http://www.furaffinity.net/",
    "https://www.furaffinity.net/"
  ]
}
